# Copy this file to .env and fill in your actual API credentials

# Bitfinex API Credentials (REQUIRED)
BITFINEX_API_KEY=your_api_key_here
BITFINEX_API_SECRET=your_api_secret_here

# Automated Lending Configuration
# Symbol to lend (e.g., USD, UST, BTC)
AUTO_LENDING_SYMBOL=UST

# Total amount to lend
AUTO_LENDING_TOTAL_AMOUNT=3000

# Minimum order size
AUTO_LENDING_MIN_ORDER=150

# Minimum order size as percentage of available balance (0-100)
# If set, this overrides AUTO_LENDING_MIN_ORDER
# Example: 5.0 = 5% of available balance
AUTO_LENDING_MIN_ORDER_PERCENTAGE=5.0

# Maximum number of orders
AUTO_LENDING_MAX_ORDERS=50

# Rate interval between orders (0.000005 = 0.0005%)
AUTO_LENDING_RATE_INTERVAL=0.000005

# Target lending period in days (2 = shortest term)
AUTO_LENDING_TARGET_PERIOD=2

# Cancel existing offers before placing new ones (true/false)
AUTO_LENDING_CANCEL_EXISTING=true

# Use parallel processing (true) or sequential (false)
AUTO_LENDING_PARALLEL=false

# Maximum parallel workers (only used if parallel is true)
AUTO_LENDING_MAX_WORKERS=3

# Skip user confirmation (required for automated execution)
AUTO_LENDING_NO_CONFIRM=true

# Allow orders smaller than minimum order size (true/false)
# Still enforces Bitfinex platform minimum of 150
AUTO_LENDING_ALLOW_SMALL_ORDERS=false

# Dynamic amount increment factor (0.0-1.0)
# Orders increase by factor * order_index (0.1 = 10% increase per order)
AUTO_LENDING_AMOUNT_INCREMENT_FACTOR=0.0

# Number of top lending orders to average for rate calculation
# Helps avoid extreme rate outliers (default: 10, max: 50)
# Number of top lending orders to average for rate calculation
# Helps avoid extreme rate outliers (default: 10, max: 50)
AUTO_LENDING_AVG_ORDER_DEPTH=10

# Prioritize high-return offers (>= threshold APY regardless of period)
# When enabled, any offer with >= threshold APY gets immediate priority
# When disabled, uses standard strategy (default: true)
AUTO_LENDING_PRIORITIZE_HIGH_RETURNS=true

# High return threshold as percentage (default: 15.0 for 15% APY)
# Any offer with >= this APY gets priority when high-return strategy is enabled
AUTO_LENDING_HIGH_RETURN_THRESHOLD=15.0

AUTO_LENDING_AVG_ORDER_DEPTH=10

# Interval for automated execution in seconds (default: 600 = 10 minutes)
# Examples: 600 (10 min), 1800 (30 min), 3600 (1 hour)
AUTO_LENDING_INTERVAL=600

# Enable automated lending (true/false)
AUTO_LENDING_ENABLED=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path (inside container)
LOG_FILE=/app/logs/auto_lending.log